{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "TapQuoteAPI g++ build",
            "command": "/usr/bin/g++",
            "args": [
                "-ggdb",
                "TapQuoteAPI/Demo.cpp",
                "${workspaceFolder}/Common/SimpleEvent.cpp",
                "${workspaceFolder}/TapQuoteAPI/Quote.cpp",
                "-o",
                "dst/TapQuoteAPI/Demo.out",
                "-I",
                "${workspaceFolder}/api/include",
                "-L${workspaceFolder}/api/lib",
                "-lTapTradeAPI",
                "-lTapQuoteAPI"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "TapTradeAPI g++ build",
            "command": "/usr/bin/g++",
            "args": [
                "-ggdb",
                "TapTradeAPI/Demo.cpp",
                "${workspaceFolder}/Common/SimpleEvent.cpp",
                "${workspaceFolder}/TapTradeAPI/Trade.cpp",
                "-o",
                "dst/TapTradeAPI/Demo.out",
                "-I",
                "${workspaceFolder}/api/include",
                "-L${workspaceFolder}/api/lib",
                "-lTapTradeAPI",
                "-lTapQuoteAPI"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "TapMD Test g++ build",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-ggdb",
                "impl/Main.cpp",
                "impl/TAPSimpleEvent.cpp",
                "impl/TAPMarketDataImpl.cpp",
                "-o",
                "dst/impl/Main.out",
                "-I${workspaceFolder}/api/include",
                "-I/usr/local/include/unlib",
                "-I/usr/java/jdk1.8.0_192-amd64/include/linux",
                "-I/usr/java/jdk1.8.0_192-amd64/include",
                "-L/usr/local/lib",
                "-L/usr/local/unown",
                "-L${workspaceFolder}/api/lib",
                "-lboost_thread",
                "-lboost_locale",
                "-lboost_system",
                "-lpthread",
                "-lunlib",
                "-lTapTradeAPI",
                "-lTapQuoteAPI"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "libTAPMD build - Debug version",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-ggdb",
                "impl/TAPMarketDataImpl.cpp",
                "impl/TAPSimpleEvent.cpp",
                "jni/native_tap.cpp",
                "-fPIC",
                "-shared",
                "-o",
                "dst/libTAPMD.so",
                "-I${workspaceFolder}/api/include",
                "-I${workspaceFolder}/impl",
                "-I${workspaceFolder}/jni",
                "-I/usr/local/include/unlib",
                "-I/usr/java/jdk1.8.0_192-amd64/include/linux",
                "-I/usr/java/jdk1.8.0_192-amd64/include",
                "-L/usr/local/lib",
                "-L/usr/local/unown",
                "-L${workspaceFolder}/api/lib",
                "-lboost_thread",
                "-lboost_locale",
                "-lboost_system",
                "-lpthread",
                "-lunlib",
                "-lTapTradeAPI",
                "-lTapQuoteAPI"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "libTAPMD build - Release version",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "impl/TAPMarketDataImpl.cpp",
                "impl/TAPSimpleEvent.cpp",
                "jni/native_tap.cpp",
                "-fPIC",
                "-shared",
                "-o",
                "dst/libTAPMD.so",
                "-I${workspaceFolder}/api/include",
                "-I${workspaceFolder}/impl",
                "-I${workspaceFolder}/jni",
                "-I/usr/local/include/unlib",
                "-I/usr/java/jdk1.8.0_192-amd64/include/linux",
                "-I/usr/java/jdk1.8.0_192-amd64/include",
                "-L/usr/local/lib",
                "-L/usr/local/unown",
                "-L${workspaceFolder}/api/lib",
                "-lboost_thread",
                "-lboost_locale",
                "-lboost_system",
                "-lpthread",
                "-lunlib",
                "-lTapTradeAPI",
                "-lTapQuoteAPI"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
     ]
}